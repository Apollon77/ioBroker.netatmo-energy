{
    "type": "tabs",
    "i18n": true,
    "items": {
        "tabLogon": {
            "type": "panel",
            "label": "Logon information",
            "items": {
                "NewOAuthMethode":{
                    "newLine": true,
                    "type": "checkbox",
                    "label": "OAuth2 authentication methode",
                    "sm": 12,
                    "md": 6,
                    "lg": 4                    
                },
                "authenticate": {
                    "newLine": true,
                    "variant": "contained",
                    "color": "primary",
                    "disabled": "!_alive || data.NewOAuthMethode != true",
                    "type": "sendTo",
                    "error": {
                        "connect timeout": "Connection timeout"
                    },
                    "icon": "auth",
                    "command": "getOAuthStartLink",
                    "jsonData": "{\"client_id\": \"${data.ClientId}\",\"client_secret\": \"${data.ClientSecretID}\",\"redirect_uri_base\": \"${data._origin}\"}",
                    "label": "Authenticate with Netatmo",
                    "openUrl": true,
                    "window": "Login with Netatmo"
                },
                "authinfo": {
                    "type": "header",
                    "size": 4,
                    "style": {
                        "marginTop": 20
                    },
                    "sm": 12,
                    "text": "Authentication information"
                },                
                "HomeId":{
                    "type": "text",
                    "label": "Home-ID:",
                    "help": "Home ID from your Netatmo Energy installation"
                },  
                "ClientId":{
                    "newLine": true,
                    "type": "text",
                    "label": "Client-ID:",
                    "help": "Client ID from your Netatmo APP",
                    "sm": 12,
                    "md": 6,
                    "lg": 4            
                },  
                "ClientSecretID":{
                    "type": "text",
                    "label": "Client-Secret-ID:",
                    "help": "Client Secret ID from your Netatmo APP",
                    "sm": 12,
                    "md": 6,
                    "lg": 4   
                }, 
                "User": {
                    "newLine": true,
                    "type": "text",
                    "label": "Username:",
                    "disabled": "data.NewOAuthMethode == true",
                    "help": "Username from your Netatmo Account",
                    "sm": 12,
                    "md": 6,
                    "lg": 4
                },
                "Password": {
                    "type": "password",
                    "label": "Password",
                    "disabled": "data.NewOAuthMethode == true",
                    "help": "Password from your Netatmo Account",
                    "sm": 12,
                    "md": 6,
                    "lg": 4
                },
                "Information":{
                    "type": "header",
                    "size": "2",
                    "text": "Information"
                },     
                "notificationEnabled":{
                    "type": "checkbox",
                    "label": "Enable / Disable Notifications"
                }       
            }
        },
        "tabAPI": {
            "type": "panel",
            "label": "General settings",
            "items": {   
                "applyimmediately":{
                    "type": "checkbox",
                    "label": "apply immediately",
                    "sm": 12,
                    "md": 6,
                    "lg": 4                    
                },
                "getchangesimmediately":{
                    "newLine": true,
                    "type": "checkbox",
                    "label": "read API states immediately",
                    "sm": 12,
                    "md": 6,
                    "lg": 4                    
                },
                "refreshstates":{
                    "newLine": true,
                    "type": "number",
                    "help": "Refresh states every x seconds"
                }
            }
        },
        "tabNotification": {
            "type": "panel",
            "label": "Notifications",
            "disabled": "data.notificationEnabled !== true",
            "items": {   
                "notificationsType": {
                    "type": "select",
                    "noTranslation": true,
                    "options": [
                      {"label": "Telegram", "value": "telegram"},
                      {"label": "E-Mail",   "value": "email"},
                      {"label": "Pushover", "value": "pushover"},
                      {"label": "WhatsApp", "value": "whatsapp-cmb"},
                      {"label": "Signal", "value": "signal-cmb"}
                    ],
                    "label": "notifications type",
                    "sm": 12,
                    "md": 6,
                    "lg": 4
                  },

                "telegramInstance":{
                    "newLine": true,
                    "type": "selectSendTo",
                    "command": "telegram",
                    "label": "Telegram instance",
                    "hidden": "data.notificationsType !== 'telegram'",
                    "sm": 12,
                    "md": 6,
                    "lg": 4            
                },  
                "telegramUser":{
                    "type": "selectSendTo",
                    "command": "getTelegramUser",
                    "label": "Telegram Receiver",
                    "hidden": "data.notificationsType !== 'telegram'",
                    "sm": 12,
                    "md": 6,
                    "lg": 4            
                },
                "telegramSilentNotice":{
                    "newLine": true,
                    "type": "checkbox",
                    "label": "Silent Notice",
                    "hidden": "data.notificationsType !== 'telegram'"
                },

                "whatsappInstance":{
                    "newLine": true,
                    "type": "selectSendTo",
                    "command": "whatsapp-cmb",
                    "label": "WhatsApp instance",
                    "hidden": "data.notificationsType !== 'whatsapp-cmb'",
                    "sm": 12,
                    "md": 6,
                    "lg": 4            
                },
                
                "signalInstance":{
                    "newLine": true,
                    "type": "selectSendTo",
                    "command": "signal-cmb",
                    "label": "Signal instance",
                    "hidden": "data.notificationsType !== 'signal-cmb'",
                    "sm": 12,
                    "md": 6,
                    "lg": 4            
                },

                "pushoverInstance":{
                    "newLine": true,
                    "type": "selectSendTo",
                    "command": "pushover",
                    "label": "Pushover instance",
                    "hidden": "data.notificationsType !== 'pushover'",
                    "sm": 12,
                    "md": 6,
                    "lg": 4
                },  
                "pushoverDeviceID":{
                    "type": "text",
                    "label": "device ID (optional)",
                    "hidden": "data.notificationsType !== 'pushover'",
                    "sm": 12,
                    "md": 6,
                    "lg": 4            
                },
                "pushoverSilentNotice":{
                    "newLine": true,
                    "type": "checkbox",
                    "label": "Silent Notice",
                    "hidden": "data.notificationsType !== 'pushover'",
                    "sm": 12,
                    "md": 6,
                    "lg": 4            
                },  

                "emailInstance":{
                    "newLine": true,
                    "type": "selectSendTo",
                    "command": "email",
                    "label": "email instance",
                    "hidden": "data.notificationsType !== 'email'",
                    "sm": 12,
                    "md": 6,
                    "lg": 4
                },                   
                "emailReceiver":{
                    "newLine": true,
                    "type": "text",
                    "label": "email receiver",
                    "hidden": "data.notificationsType !== 'email'",
                    "sm": 12,
                    "md": 6,
                    "lg": 4            
                },  
                "emailSender":{
                    "type": "text",
                    "label": "email sender",
                    "hidden": "data.notificationsType !== 'email'",
                    "sm": 12,
                    "md": 6,
                    "lg": 4
                },
                
                "genInfoHeader":{
                    "type": "header",
                    "size": "2",
                    "text": "Allgemeine Einstellungen"          
                },  

                "NoticeType":{
                    "type": "select",
                    "options": [
                      {"label": "Long Notifications", "value": "longNotice"},
                      {"label": "Short Notifications", "value": "shortNotice"}
                    ],                    
                    "label": "Notification Style",
                    "sm": 12,
                    "md": 6,
                    "lg": 4            
                },
                "notifications":{
                    "type": "select",
                    "options": [
                      {"label": "no notifications", "value": "000"},
                      {"label": "information", "value": "i00"},
                      {"label": "information, warnings", "value": "iw0"},
                      {"label": "information, errors", "value": "i0e"},
                      {"label": "information, warnings, errors", "value": "iwe"},
                      {"label": "warnings", "value": "0w0"},
                      {"label": "warnings, errors", "value": "0we"},
                      {"label": "errors", "value": "00e"}                                                                  
                    ],                    
                    "label": "message type",
                    "sm": 12,
                    "md": 6,
                    "lg": 4            
                }              
            }
        },
        "tabSubscribes": {
            "type": "panel",
            "label": "Messages",
            "disabled": "data.notificationEnabled !== true",
            "items": {   
                "notify_bat_low":{
                    "newLine": true,
                    "type": "checkbox",
                    "label": "Low battery",
                    "sm": 6,
                    "md": 3,
                    "lg": 2                    
                },
                "notify_bat_low_txt":{
                    "type": "text",
                    "label": "Message",
                    "help": "Message if battery goes low",
                    "sm": 12,
                    "md": 6,
                    "lg": 4            
                },
                "notify_bat_medium":{
                    "newLine": true,
                    "type": "checkbox",
                    "label": "Medium battery",
                    "sm": 6,
                    "md": 3,
                    "lg": 2                    
                },
                "notify_bat_medium_txt":{
                    "type": "text",
                    "label": "Message",
                    "help": "Message if battery goes medium",
                    "sm": 12,
                    "md": 6,
                    "lg": 4                                
                },
                "notify_connection_no":{
                    "newLine": true,
                    "type": "checkbox",
                    "label": "Connection",
                    "sm": 6,
                    "md": 3,
                    "lg": 2                    
                },
                "notify_connection_no_txt":{
                    "type": "text",
                    "label": "Message",
                    "help": "Message if valve lost connection",
                    "sm": 12,
                    "md": 6,
                    "lg": 4   
                },
                "notify_window_open":{
                    "newLine": true,
                    "type": "checkbox",
                    "label": "Window open",
                    "sm": 6,
                    "md": 3,
                    "lg": 2                    
                },
                "notify_window_open_txt":{
                    "type": "text",
                    "label": "Message",
                    "help": "Message if window is open",
                    "sm": 12,
                    "md": 6,
                    "lg": 4   
                },
                "notify_heating_power_request":{
                    "newLine": true,
                    "type": "checkbox",
                    "label": "Heating request",
                    "sm": 6,
                    "md": 3,
                    "lg": 2                    
                },
                "notify_heating_power_request_txt":{
                    "type": "text",
                    "label": "Message",
                    "help": "Message if valve creates a heating request",
                    "sm": 12,
                    "md": 6,
                    "lg": 4   
                },
                "notify_anticipating":{
                    "newLine": true,
                    "type": "checkbox",
                    "label": "Anticipating",
                    "sm": 6,
                    "md": 3,
                    "lg": 2                    
                },
                "notify_anticipating_txt":{
                    "type": "text",
                    "label": "Message",
                    "help": "Message if boiler anticipates",
                    "sm": 12,
                    "md": 6,
                    "lg": 4   
                }
            }
        },
        "tabSensors": {
            "type": "panel",
            "label": "Sensor actions",
            "items": {
                "sensors": {
                    "type": "table",
                    "sm": 12,
                    "md": 12,
                    "lg": 12,
                    "label": "Check window/door status",
                    "items": [
                        {
                            "type": "selectSendTo",
                            "attr": "window_sensor",
                            "width": "20%",
                            "command": "GetWindowOpenSensors",
                            "title": "Window/Door sensor",
                            "help": "Window/Door sensor (role = #.window, #.door)",
                            "filter": true,
                            "sort": true
                        },
                        {
                            "type": "checkbox",
                            "attr": "window_sensor_value",
                            "width": "5%",
                            "title": "Value",
                            "help": "Check value from window/door sensor",
                            "filter": true,
                            "sort": true,
                            "default": false
                        },
                        {
                            "type": "number",
                            "attr": "sensor_delay",
                            "width": "5%",
                            "title": "Delay",
                            "help": "Delay to perform action (seconds)",
                            "filter": true,
                            "sort": false,
                            "default": 0
                        },
                        {
                            "type": "selectSendTo",
                            "attr": "action",
                            "width": "10%",
                            "command": "GetSensorActions",
                            "title": "Action",
                            "help": "Action to perform",
                            "filter": true,
                            "sort": true,
                            "default": "temp"
                        },
                        {
                            "type": "selectSendTo",
                            "attr": "temp_sensor",
                            "width": "30%",
                            "command": "GetSetTempSensors",
                            "title": "Actor",
                            "help": "Actor to set temperature",
                            "filter": true,
                            "sort": true
                        },
                        {
                            "type": "number",
                            "attr": "set_value",
                            "width": "5%",
                            "title": "Target temperature",
                            "help": "Set temperature of actor",
                            "filter": false,
                            "sort": false,
                            "default": "18"
                        },
                        {
                            "type": "checkbox",
                            "attr": "immediately",
                            "width": "5%",
                            "title": "Immediately",
                            "help": "Synchronize temperature immediately",
                            "filter": true,
                            "sort": true,
                            "default": false
                        }
                    ]
                }
            }
        }                   
    }
}